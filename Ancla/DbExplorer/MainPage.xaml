<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DbExplorer.MainPage"
             xmlns:models="clr-namespace:Ancla.Models;assembly=Ancla"
             x:DataType="models:PSM">

    <Grid ColumnDefinitions="300,1200,*">
        <!-- Define three rows of equal height for the vertical sections -->

        <!-- First section content -->
        <Frame Grid.Column="0">
           <StackLayout Spacing="10">
                <Label Text="Modifications" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Text="Phosphorylation" Clicked="Button_OnClicked" BackgroundColor="LightBlue"/>
                <Button Text="Carbamidomethylation" Clicked="OnModificationClick" BackgroundColor="LightBlue"></Button>
                <Button Text="Acetylation" Clicked="OnModificationClick" BackgroundColor="LightBlue"></Button>
            </StackLayout>
        </Frame>

        <!-- Second section content -->
        <Frame Grid.Column="1">
            <!-- Displays the database table, which will be a mock table as a placeholder -->
            <ListView x:Name="PSMs">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding FullSequence}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>

        <!-- Third section content -->
        <Frame Grid.Column="2">
            <!--<Label Text="Tools" HorizontalOptions="Center" VerticalOptions="Center"/>-->
            <Label Text="Modification Distribution" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
    </Grid>

</ContentPage>
